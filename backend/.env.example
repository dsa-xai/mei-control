# ============================================
# CONFIGURAÇÕES DO SERVIDOR
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# BANCO DE DADOS (PostgreSQL)
# ============================================
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mei_control?schema=public"

# ============================================
# JWT - AUTENTICAÇÃO
# ============================================
JWT_SECRET=sua-chave-secreta-super-segura-aqui-mude-em-producao
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# FRONTEND URL (CORS)
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# EMAIL (SMTP) - Para notificações
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
SMTP_FROM="MEI Control <noreply@meicontrol.com.br>"

# ============================================
# CONFIGURAÇÕES MEI
# ============================================
MEI_TETO_ANUAL=81000
MEI_TETO_CAMINHONEIRO=251600
MEI_ALERTA_PERCENTUAL=80
MEI_CRITICO_PERCENTUAL=95

# ============================================
# UPLOAD DE ARQUIVOS
# ============================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=./uploads

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
